
<div class="trade-menu-container">
    <div class="receiver-menu">
        <div class="username-header">
            offer reciever: <%= offer_receiver["name"]%>
        </div>
        <div class="trading-page-items-box">
            reciever wishlist:
            <% reciever_wishlist.each do |item|%>
            <li>
                 <%= item["name"]%>
            </li>
            <% end %>
        </div>
        <div>
            <p>up for trade: <%= trade_item['name']%></p>
        </div>
    </div>
    <div class="sender-menu">
        <div class="username-header">
            offer sender: <%= offer_sender["name"] %> (you)
        </div>
        <div class="trading-page-items-box">
            <% sender_inventory.each do |item|%>
                <form action="/offered_item_id/<%= item['id']%>/<%=offer_receiver['id']%>/<%= trade_item['id']%>" method="post">
                    <button class="btn btn-light"><%= item["name"]%></button>

                </form>

                
            <% end %>
        </div>
        <div>
            sender items willing to trade
            

        </div>
    </div>


</div>
